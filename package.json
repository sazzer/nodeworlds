{
  "name": "nodeworlds",
  "version": "1.0.0",
  "author": "Graham Cox <graham@grahamcox.co.uk>",
  "private": true,
  "scripts": {
    "start": "ts-node src/index",
    "test": "run-s test:lint test:unit",
    "test:lint": "tslint --project .",
    "test:unit": "jest --config jest.config.json",
    "docker": "docker build -t nodeworlds .",
    "e2e": "run-s -c e2e:prepare e2e:run e2e:report",
    "e2e:prepare": "mkdirp output/e2e",
    "e2e:run": "cucumber-js --require-module ts-node/register --require-module dotenv/config --require 'e2e/**/*.ts' -f node_modules/cucumber-pretty -f json:output/e2e/cucumber_report.json e2e/features --tags 'not @ignore' --tags 'not @wip'",
    "e2e:report": "node report.js",
    "e2e:wip": "cucumber-js --require-module ts-node/register --require-module dotenv/config --require 'e2e/**/*.ts' -f node_modules/cucumber-pretty e2e/features --tags '@wip'",
    "e2e:docker": "docker-compose -f docker-compose.e2e.yml -f docker-compose.e2e-chrome.yml -p nodeworldse2e up --exit-code-from=nodeworlds-e2e-tests --build --force-recreate",
    "e2e:docker-firefox": "docker-compose -f docker-compose.e2e.yml -f docker-compose.e2e-firefox.yml -p nodeworldse2e up --exit-code-from=nodeworlds-e2e-tests --build --force-recreate",
    "e2e:docker-mobile": "docker-compose -f docker-compose.e2e.yml -f docker-compose.e2e-chrome-mobile.yml -p nodeworldse2e up --exit-code-from=nodeworlds-e2e-tests --build --force-recreate"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.4",
    "@types/cls-hooked": "^4.3.0",
    "@types/compression": "^1.0.1",
    "@types/config": "^0.0.35",
    "@types/cucumber": "^6.0.0",
    "@types/debug": "^4.1.5",
    "@types/dockerode": "^2.5.20",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.45",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^24.0.21",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.3",
    "@types/nunjucks": "^3.1.2",
    "@types/pg": "^7.11.2",
    "@types/response-time": "^2.3.4",
    "@types/selenium-webdriver": "^4.0.5",
    "chai": "^4.2.0",
    "cucumber": "^6.0.3",
    "cucumber-html-reporter": "^5.0.2",
    "cucumber-pretty": "^6.0.0",
    "jest": "^24.9.0",
    "mkdirp": "^0.5.1",
    "normalize-url": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "testcontainers": "^2.1.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@types/uuid": "^3.4.6",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chokidar": "^3.2.3",
    "cls-hooked": "^4.2.2",
    "cls-rtracer": "^1.3.0",
    "compression": "^1.7.4",
    "config": "^3.2.4",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "i18next": "^19.0.0",
    "i18next-express-middleware": "^1.8.2",
    "morgan": "^1.9.1",
    "nunjucks": "^3.2.0",
    "pg": "^7.12.1",
    "postgres-migrations": "^3.0.2",
    "response-time": "^2.3.2",
    "supports-color": "^7.1.0",
    "uuid": "^3.3.3"
  }
}
